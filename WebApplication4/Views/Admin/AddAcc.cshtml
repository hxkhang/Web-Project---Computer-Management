
@{
    Layout = null;
}
<partial name="AdminLayout" />
@model Account;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/AdminEditEquip.css" />
    <title>AddAcc</title>
</head>
<body>
    <div class="container">
        <form method="post">
            <div class="form-group row">
                <label class="col-md-4">User Name</label>
                <input class="col-md-8 form-control" type="text" asp-for="UserName"  />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group row">
                <label class="col-md-4">User pass</label>
                <input class="col-md-8 form-control" type="password" asp-for="UserPass"  />
                <span asp-validation-for="UserPass"></span>
            </div>
            <div class="form-group row">
                <label class="col-md-4">Roles</label>
                <select class="form-control col-md-8" asp-for="UserRole">
                    <option disabled selected>Select Role</option>
                    <option value="Admin">Admin</option>
                    <option value="User">User</option>
                </select>
                <span asp-validation-for="UserRole"></span>
            </div>
            <button class="btn btn-primary d-flex justify-content-center" asp-action="CreateAcc">Add</button>
        </form>
    </div>
</body>
</html>
